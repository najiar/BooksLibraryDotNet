@model UniProject.Models.Book

@{
    ViewData["Title"] = "Delete";
}


<h3 class ="text-center">Are you sure you want to delete this book?</h3>
<hr />
<div class="col d-flex justify-content-center text-center">
    <div class="card mb-4">
        <img class="card-img-top embed-responsive-item" src="@Url.Content(Model.Image)" alt="Image" style="width: 100%; height: 30vh; object-fit: contain;" />
        <div class="card-header">
            <h7 class="card-title">Title: @Model.Title</h7>
        </div>
        <div class="card-body">
            <h7>Author: @Model.Author</h7>
            <br />
            <h7>ISBN: @Model.isbn</h7>
            <br />
            <h7>Category: @Model.Category</h7>
            <br />
            <h7>Publication year: @Model.PublicationYear</h7>
            <br />
        </div>
        <div class="row mb-3">
            <div class="col">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="BookId" />
                    <button type="submit" value="Delete" class="btn btn-danger">
                        <i class="fa-sharp fa-solid fa-trash"></i> Delete
                    </button>
                </form>
            </div>
            <div class="col">
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="fa-solid fa-arrow-left"></i> Back
                </a>
            </div>
        </div>
           
    </div>
</div>




